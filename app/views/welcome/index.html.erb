  <div class="row">
    <div class="week-title large-12 text-center">
      本周主打
    </div>
  </div>
  <div class="row">
    <div class="columns col-md-offset-2 col-md-4">
      <%= link_to product_path(@products[0]) do %>
      <%= image_tag(@products[0].image.medium.url, class: "img-responsive  all_image_css") %>
