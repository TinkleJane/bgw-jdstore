<%= simple_form_for [:admin, @product] do |f| %>

<div class="col-md-12">
  <%= f.input :title %>
</div>

<div class="col-md-12">
  <%= f.input :description %>
</div>

<div class="col-md-6">
  <%= f.input :quantity %>
</div>

<div class="col-md-6">
  <%= f.input :price %>
</div>
<div class="col-md-6 col-sm-12">
  <%= f.association :labels %>
</div>

<div class="col-md-6 col-sm-12">
  <%= f.association :groups %>
</div>

<div class="form-group col-md-12">
  <% if @product.image.present? && !@product.image.thumb.url.blank? %>
  <label class="control-label">商品展示图片</label>
  <br>
  <%= image_tag @product.image.thumb.url, :class => "col-md-3" %>
  <% end %>
</div>
<div class="col-md-12">
  <%= f.input :image, as: :file %>
</div>

<div class="form-group col-md-12">
  <% if @product.photos.present? %>
  <label class="control-label">商品系列图片</label>
  <br>
  <% @product.photos.each do |p| %>
  <% if !p.avatar.thumb.url.blank? %>
  <%= image_tag p.avatar.thumb.url, :class => "col-md-3 m10" %>
  <% end %>
  <% end %>
  <% end %>
</div>
<div class="form-group col-md-12">
  <%= f.label "Please upload photos" %><br>
  <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]", class: "btn btn-default"%>
</div>

<div class="col-md-12">
  <%= f.input :is_hidden %>
  <%= f.input :is_command %>
</div>

<div class="col-md-6 pb100">
  <%= f.submit "Submit", data: { disable_with: "Submitting..." }, class: "btn btn-normal" %>
</div>
<div class="col-md-6 pb100">
  <%= link_to("Cancel", admin_products_path, class: "btn btn-wight") %>
</div>
<% end %>

<script type="text/javascript">
  $("#product_label_ids").select2();
  $("#product_group_ids").select2();
</script>
