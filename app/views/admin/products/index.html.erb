<h2>
  Product List
</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class: "btn btn-normal") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th width="100">
        Options</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.id %>
      </td>
      <td>
        <%= link_to product_path(product) do %>
        <% if product.image.present? %>
        <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
      <% else %>
        <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
        <% end %>
      </td>
      <td>
        <%= product.title %>
      </td>
      <td>
        <%= product.price %>
      </td>
      <td>
        <%= link_to("编辑", edit_admin_product_path(product), :class => "btn btn-xs btn-info") %>
        <br><br>
        <%= link_to("上移", move_up_admin_product_path(product), :method => :post, :class => "btn btn-xs btn-success") %>
        <br><br>
        <%= link_to("下移", move_down_admin_product_path(product), :method => :post, :class => "btn btn-xs btn-danger") %>
        <br><br>
        <% if product.is_hidden %>
        <%= link_to publish_admin_product_path(product), :method => :post, :class => "btn btn-xs btn-small" do %> <i class="fa fa-eye"></i> <% end %>
        <% else %>
        <%= link_to hide_admin_product_path(product), :method => :post, :class => "btn btn-xs btn-small" do %><i class="fa fa-eye-slash"></i> <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
