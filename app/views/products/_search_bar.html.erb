    </div>
    <div class="col-lg-2 col-md-2">
      <%= link_to "黑", search_color_products_path(:color => 0),
                      class: "btn btn-wight advance-btn" %>
    </div>
    <div class="col-lg-2 col-md-2">
      <%= link_to "白", search_color_products_path(:color => 1),
                      class: "btn btn-wight advance-btn" %>
    </div>
  </div>
